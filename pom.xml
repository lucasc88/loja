			<version>3.3.7-1</version>
		</dependency>
		
		<dependency>
		    <groupId>com.tinify</groupId>
		    <artifactId>tinify</artifactId>
		    <version>1.4.1</version>
		</dependency>

	</dependencies>

	<repositories>
		<repository>
			<id>prime-repo</id>
			<name>PrimeFaces Maven Repository</name>
			<url>http://repository.primefaces.org</url>
			<layout>default</layout>
		</repository>
	</repositories>

